datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("viewer") // Roles: admin, editor, viewer
  documents Document[]
}

model Document {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  filePath    String
  ingestionStatus String @default("pending") // Status: pending, processing, pompleted, failed
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}