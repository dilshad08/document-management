datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  name      String
  password  String
  role      String     @default("viewer") // Roles: admin, editor, viewer
  documents Document[]
}

model Document {
  id              String @id @default(uuid())
  title           String
  description     String
  filePath        String
  ingestionStatus String @default("pending") // Status: pending, processing, pompleted, failed
  userId          String
  user            User   @relation(fields: [userId], references: [id])
}
